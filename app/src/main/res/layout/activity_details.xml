<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    tools:context="com.example.gopal.inventoryrealm.DetailsActivity">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/product_name_header"
        style="@style/detail_activity_text_header"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/product_name"
        style="@style/detail_activity_text_value" />

    <TextView
        android:id="@+id/product_price_header"
        style="@style/detail_activity_text_header" />

    <TextView
        android:id="@+id/product_price"
        style="@style/detail_activity_text_value" />

    <TextView
        android:id="@+id/product_quantity_header"
        style="@style/detail_activity_text_header" />

    <TextView
        android:id="@+id/product_quantity"
        style="@style/detail_activity_text_value" />

    <TextView
        android:id="@+id/seller_name_header"
        style="@style/detail_activity_text_header" />

    <TextView
        android:id="@+id/seller_name"
        style="@style/detail_activity_text_value" />

    <TextView
        android:id="@+id/seller_phone_no_header"
        style="@style/detail_activity_text_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_call" />

        <TextView
            android:id="@+id/seller_phone_no"
            style="@style/detail_activity_text_value"
            android:layout_marginLeft="25dp" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
